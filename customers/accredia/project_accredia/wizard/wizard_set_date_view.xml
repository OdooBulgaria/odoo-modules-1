<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="wizard_set_date_view" model="ir.ui.view">
          <field name="name">wizard.set.date.form</field>
          <field name="model">wizard.set.date</field>
          <field name="arch" type="xml">
            <form string="Wizard Set Date">
                <group>
                    <group>
                        <field name="date" required="1" />
                        <field name="phase_id" invisible="1" />
                    </group>
                </group>
                <footer>
                    <button name="do_set_date"
                            string="Imposta date"
                            type="object"
                            default_focus="1"
                            class="oe_highlight" />
                    or 
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
          </field>
        </record>

    </data>
</openerp>
