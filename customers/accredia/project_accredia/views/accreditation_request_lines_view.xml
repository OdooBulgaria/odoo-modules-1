<?xml version="1.0"?>
<openerp>
    <data>

     <!-- DocLite Accreditation Request Lines Form View -->
     <record model="ir.ui.view" id="view_accreditation_request_lines_form">
            <field name="name">accreditation.request.lines.form</field>
            <field name="model">accreditation.request.lines</field>
            <field name="arch" type="xml">
                <form string="Accreditation Request Lines Form">
                    <group colspan="3" col="4">
                        <field name="request_id" />
                        <field name="unit_id"/>
                        <field name="availability_date" />
                    </group>
                </form>
            </field>
     </record>

    <!-- DocLite Accreditation Request Lines Tree View -->
    <record model="ir.ui.view" id="view_accreditation_request_lines_tree">
            <field name="name">accreditation.request.lines.tree</field>
            <field name="model">accreditation.request.lines</field>
            <field name="arch" type="xml">
                <tree string="Accreditation Request Lines Tree">
                     <field name="request_id" />
                     <field name="unit_id" />
                     <field name="availability_date" />                
                </tree>
            </field>
    </record>

    </data>
</openerp>
