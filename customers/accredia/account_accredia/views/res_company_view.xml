<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Company View -->
        <record id="view_res_company_account_accredia" model="ir.ui.view">
            <field name="name">view.res.company.account.accredia.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@string='Bank Accounts']" position="after">
                    <group string="Diritti di Mantenimento">
                        <field name="price_min" />
                        <field name="fee_year" />
                        <field name="fee_year_small_lab" />
                        <field name="price_fixed_lab" />
                        <field name="price_fixed_mer" />
                    </group>
                </xpath>
            </field>
        </record>
     </data>
</openerp>
