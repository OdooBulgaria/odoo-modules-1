<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>


    <record id="filter_isale_report_template" model="ir.filters">
        <field name="name">By Template</field>
        <field name="model_id">sale.report</field>
        <field name="user_id" eval="False"/>
        <field name="context">{'group_by': ['date:month', 'template_id']}</field>
    </record>    
    <record id="filter_isale_report_template" model="ir.filters">
        <field name="name">By Parent Code</field>
        <field name="model_id">sale.report</field>
        <field name="user_id" eval="False"/>
        <field name="context">{'group_by': ['date:month', 'template_code']}</field>
    </record>      
    <record id="filter_isale_report_color" model="ir.filters">
        <field name="name">By Color</field>
        <field name="model_id">sale.report</field>
        <field name="user_id" eval="False"/>
        <field name="context">{'group_by': ['date:month', 'color_id']}</field>
    </record>
    <record id="filter_isale_report_size" model="ir.filters">
        <field name="name">By Size</field>
        <field name="model_id">sale.report</field>
        <field name="user_id" eval="False"/>
        <field name="context">{'group_by': ['date:month', 'size_id']}</field>
    </record>      
    <record id="filter_isale_report_salesagent" model="ir.filters">
        <field name="name">By Salesagent</field>
        <field name="model_id">sale.report</field>
        <field name="user_id" eval="False"/>
        <field name="context">{'group_by': ['date:month', 'salesagent_id']}</field>
    </record>     
    <record id="filter_isale_report_season" model="ir.filters">
        <field name="name">By Season</field>
        <field name="model_id">sale.report</field>
        <field name="user_id" eval="False"/>
        <field name="context">{'group_by': ['date:month', 'season']}</field>
    </record>       
    <record id="view_order_product_search_montecristo" model="ir.ui.view">
        <field name="name">sale.report.search.montecristo</field>
        <field name="model">sale.report</field>
        <field name="inherit_id" ref="sale.view_order_product_search"/>
        <field name="arch" type="xml">
       	    <xpath expr="//field[@name='categ_id']" position="after">
                <field name="size_id"/>
                <field name="color_id"/>   
                <field name="salesagent_id"/> 
                <field name="season"/>                
            </xpath> 
        </field>
    </record>    
    
</data>
</openerp>
