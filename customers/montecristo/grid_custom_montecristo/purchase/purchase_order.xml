<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="purchase_order_form_montecristo" model="ir.ui.view">
            <field name="name">purchase.order.form.montecristo</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase_product_variant_grid.purchase_product_variant_grid_purchase_order_view_order_form"/>
             <field name="arch" type="xml">
             	<xpath expr="//field[@name='value_filter_id']" position="attributes">
                        <attribute name="invisible">0</attribute>
                        <attribute name="placeholder">Colore</attribute>                        
             	</xpath>              
             </field>
        </record>               	

        <record id="purchase_order_tree_montecristo" model="ir.ui.view">
            <field name="name">purchase.order.form.montecristo</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
             <field name="arch" type="xml">
             	<xpath expr="//field[@name='origin']" position="attributes">
                	<attribute name="invisible">1</attribute>                     
             	</xpath>                  
             	<xpath expr="//field[@name='origin']" position="after">
                	<field name="partner_ref"/>                     
             	</xpath>              
             </field>
        </record>                     
        
    </data>
</openerp>
