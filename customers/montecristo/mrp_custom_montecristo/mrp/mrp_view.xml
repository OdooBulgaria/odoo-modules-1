<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="view_mrp_bom_filter_montecristo" model="ir.ui.view">
            <field name="name">mrp.bom.select.montecristo</field>
            <field name="model">mrp.bom</field>
             <field name="inherit_id" ref="mrp.view_mrp_bom_filter"/>            
            <field name="arch" type="xml">
                <xpath expr="//filter[@string='Type']" position="after">
                    <filter string="Family" icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'family'}"/>                    
                    <filter string="Season" icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'season'}"/>
                </xpath>
            </field>
        </record>                                                                   

        <record id="mrp_bom_form_view_montecristo" model="ir.ui.view">
            <field name="name">mrp.bom.form.view.montecristo</field>
            <field name="model">mrp.bom</field>
             <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>            
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Components']" position="after">
                    <page string="Costi Primi">
                        <button string="Calcola costi per variante" name="compute_variant_price" type="object" icon="gtk-ok"  colspan="4"/>
	                    <field name="price_per_variant_ids">
	                        <tree string="Costi per variante" editable="bottom">
	                            <field name="product_id" domain="[('product_tmpl_id','=', parent.product_tmpl_id)]"/>
	                            <field name="first_price"/>
	                        </tree>
	                    </field>                    
	                </page>
                </xpath>
            </field>
        </record>          
        
        <record id="view_mrp_bom_tree_montecristo" model="ir.ui.view">
            <field name="name">mrp.bom.tree.montecristo</field>
            <field name="model">mrp.bom</field>
            <field name="arch" type="xml">
                <tree string="Distinte Base">
                	<field name="product_tmpl_id" />
                    <field name="product_id" />
                    <field name="family" />
                    <field name="season" />
                </tree>
            </field>
        </record>        
        
    </data>
</openerp>
