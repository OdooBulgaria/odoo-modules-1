<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>    

        <record id="view_bom_massive_update" model="ir.ui.view">
            <field name="name">Massive Update</field>
            <field name="model">bom.massive.update</field>
            <field name="arch" type="xml">
                <form string="Order Confirm">
                    <field name="bom_ids" widget="many2many_tags" />
                    <separator colspan="4" string="Lines" />                    
                    <field name="line_ids">
                        <tree editable="bottom">
                            <field name="product_id" required="1" on_change="onchange_product_id(product_id)" />
                            <field name="type" required="1" />
                            <field name="product_qty" required="1" />
                            <field name="product_uom" required="1" />
                            <field name="product_efficiency" required="1" />
                            <field name="attribute_value_row_ids" widget="many2many_tags" />
                            <field name="attribute_value_column_ids" widget="many2many_tags" />                            
                        </tree>
                    </field>
                    <footer>
                        <button name="insert_update" string="Insert" type="object" class="oe_highlight"/>
                        <button name="remove_update" string="Remove" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_bom_massive_update" model="ir.actions.act_window">
            <field name="name">Massive Update</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bom.massive.update</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_bom_massive_update"/>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <record model="ir.values" id="bom_massive_update">
            <field name="name">Massive Update</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_bom_massive_update'))" />
            <field name="key">action</field>
            <field name="model">mrp.bom</field>         
        </record>
    </data>
</openerp>
