<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		
		<template id="report_order_package">

		    <t t-set="body_classname" t-value="'container'"/>
		    
            <html style="height: 100%">
                <head>
			        <link href="/web/static/lib/bootstrap/css/bootstrap.css" rel="stylesheet"/>
			        <link href="/website/static/src/css/website.css" rel="stylesheet"/>
			        <link href="/web/static/lib/fontawesome/css/font-awesome.css" rel="stylesheet"/>
			        <style type="text/css">
					    body {
					        color: #000 !important;
					    }
					    .border-black td {
					        border-top: 1px solid black !important;
					    }
					    .table-condensed > thead > tr > th {
					        border-bottom: 1px solid black !important;
					    }
					    .zero_min_height {
					        min-height: 0px !important;
					    }
			        </style>                	
                    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
                    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
                    <title>Odoo</title>
                    <link rel="shortcut icon" href="/web/static/src/img/favicon.ico" type="image/x-icon"/>
                    <t t-raw="head or ''"/>
                </head>
                <body t-att-class="body_classname" style="padding: 0pt;">

			        <t t-foreach="docs" t-as="o">
		                <div class="page">
	 
		                    <div class="row">
		                        <div class="col-xs-12">
		                            <table style="border: None; padding: 0pt; margin: 0pt;">
	                                    <tr style="font-size: 14px;">
	                                    	<td  style="width: 95%; ">
	                                    		<div style="width: 260px; white-space: nowrap; overflow:hidden; text-overflow:ellipsis;" t-esc="o.partner_id.name"/>
	                                    	</td>
	                                    	<td rowspan="2" style="width: 5%;">
		                            			<img src="/report_qweb_montecristo/static/img/RRD_Logo_reduced.jpg" style="width:7px;"/>
	                                    	</td>	                                    	
	                                    </tr>
	                                    <tr style="font-size: 22px;">
	                                    	<td style="vertical-align: middle;">
	                                    		<div>
	                                    			<span style="font-size: 14px;" t-esc="o.name"/>
	                                    			<span t-esc="'/'+str(o.stock_number)"/>
	                                    		</div>	
	                                    	</td>
	                                    </tr>
	                                    <tr>
	                                    	<td colspan="2">
	                                    		<div style="font-size: 7px;">Montecristo srl via Topazio 7/c 58100 Grosseto</div>
	                                    	</td>
	                                    </tr>	
	                                    <tr>
	                                    	<td colspan="2">
	                                    		<div>
	                                    			<br />
	                                    			<img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.stock_number, 400, 50)" style="width:100%;height:50px"/>
	                                    		</div>
	                        				</td>
                        				</tr>	                                                                        	                                    	                                    	                                    
		                            </table>
		                        </div>	                    
		                    </div>
	    
		                </div>
	            	</t>                	
                	
                </body>
            </html>
		    		    					
		</template>		
		
</data>
</openerp>
								            