<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		
		<template id="report_divisione">
		    <t t-call="report.html_container">              	
		        <t t-foreach="get_docs(docs)" t-as="o">
		        	<div class="header">
		        		<div class="row">
		        			<div class="col-xs-12">
				    			<div style="font-size: 16px; padding-top:50px;">
									<span t-esc="o['location_id'].name"/>				    				
				    			</div>			        				
		        				<div style="font-size: 24px; font-weight: bold;">
				    				[<span t-esc="o['product_tmpl_id'].tmpl_default_code"/>] <span t-esc="o['product_tmpl_id'].name"/> <span t-esc="o['color'].name" /> <span t-esc="'('+o['color'].description+')'" />
				    			</div>
			    			</div>
			    			<div class="col-xs-12">
								<table width="100%" style="height:20px; border-top: 1px solid black; border-bottom: 1px solid black;">
			    					<tr style="text-align: center; font-size: 12px; font-weight: bold; font-style: italic; background-color: #CCCCCC;">
			    						<td style="width:6%;">
			    							<span>OV</span>
			    						</td>
			    						<td style="width:6%;">
			    							<span>SN</span>
			    						</td>			    						
			        					<t t-foreach="get_sizes(o['product_tmpl_id'])" t-as="size">
			        						<td style="width:6%;">
			        							<span t-esc="size.name"/>
			        						</td>
			        					</t>
			    						<td style="width:6%;">
			    							<span>TOT</span>
			    						</td>
			    						<td>
			    							<span>CLI</span>
			    						</td>			    									    								    						
			    					</tr>
			    				</table>
			    			</div>
	        			</div>
        			</div>    		        	
	                <div class="page">
	                    <div class="oe_structure">                    
		                    <div class="row">
				    			<div class="col-xs-12">	
									<table width="100%">
										<t t-foreach="get_lines(o)" t-as="line">
											<t t-if="line[1]=='Totals:'">
												<t t-set="weight" t-value="'font-weight: bold; border-top: 1px solid black;'"/>
											</t>
											<t t-if="line[1]!='Totals:' and line[4] == ''">
												<t t-set="weight" t-value="'font-weight: bold;'"/>
											</t>	
											<t t-if="line[1]!='Totals:' and line[4] != ''">
												<t t-set="weight" t-value="''"/>
											</t>																					
					    					<tr t-att-style="weight + ' text-align: center; font-size: 12px; background-color: '+ line[0] + ';'">				    					                    	
					    						<td style="width:6%;">
					    							<span t-esc="line[1]" />
					    						</td>
					    						<td style="width:6%;">
					    							<span t-esc="line[5]" />
					    						</td>					    						
					        					<t t-foreach="line[2]" t-as="size">
					        						<t t-if="size != 0">
						        						<td style="width:6%; color: #0000FF;">
							    							<span t-esc="formatLang(size, digits=0)" />
						        						</td>
					        						</t>
					        						<t t-if="size == 0">
						        						<td style="width:6%; color: #000000;">
							    							<span t-esc="formatLang(size, digits=0)" />
						        						</td>
					        						</t>					        						
					        					</t>
					    						<td style="width:6%;">
													<span t-esc="formatLang(line[3], digits=0)" />
					    						</td>
					    						<td>
													<span t-esc="line[4]" />
					    						</td>
					    					</tr>
				    					</t>				    										
			    					</table>
				    			</div>
		                    </div>
		                    <div class="row">
		                    	<div class="col-xs-8" />
		                    	<div class="col-xs-4">
		                    		<br />
		                    		<br />
		                    		<div>
		                    			<span>Firma magazziniere</span>
		                    			<br />
		                    			<br />
		                    			<span>______________________</span>
		                    		</div>
		                    	</div>
		                    </div>
		                </div>
	                </div>
            	</t>	
			</t>
		</template>		
		
</data>
</openerp>
								            