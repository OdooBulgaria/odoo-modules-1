<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		
		<template id="report_product_barcode">
		    <t t-call="report.html_container">
		        <t t-foreach="docs" t-as="o">
	                <div class="page">
	                    <div class="oe_structure"/>
	                    <div class="row">
	                        <div class="col-xs-12">
	                            <table height="350px">
                                    <tr style="font-size: 20px;">
                                    	<td width="50%">
                                    		<div>CODE:</div>
                                    	</td>
                                    	<td width="25%">
                                    		<div style="text-align: right;">COLOUR:</div>
                                    	</td>
                                    	<td width="25%">
                                    		<div style="text-align: center;">SIZE:</div>
                                    	</td>
                                    </tr>
                                    <tr style="font-size: 32px;">
                                    	<td>
                                    		<b><div t-esc="o.product_tmpl_id.tmpl_default_code"/></b>
                                    	</td>
                                    	<td>
                                    		<b><div style="text-align: right;" t-esc="o.attribute_value_ids[0].name"/></b>
                                    	</td>
                                    	<td>
                                    		<b><div t-esc="o.attribute_value_ids[1].name"/></b>
                                    	</td>
                                    </tr>
                                    <tr>
                                    	<td>
                                    		<div style="font-size: 20px;">NAME:</div>
                                    	</td>
                                    	<td>
                                    		<b><div style="text-align: right; font-size: 32px;" t-esc="o.attribute_value_ids[0].description"/></b>
                                    	</td>
                                    	<td>
                                    		<b><div style="font-size: 32px;" t-esc="o.attribute_value_ids[1].description"/></b>
                                    	</td>
                                    </tr>
                                    <tr style="font-size: 32px;">
                                    	<td colspan="3">
                                    		<b><div t-esc="o.name"/></b>
                                    	</td>
                                    </tr>
                                    <tr>
                                    	<td colspan="2">
                                    		<div>
                                    			<img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.default_code, 600, 100)" style="width:100%;height:100px"/>
                                    			<p class="text-center" t-esc="o.default_code"></p>
                                    		</div>
                        				</td>
                                    	<td>
                                    		<div>
                                    			<img src="/report_qweb_montecristo/static/img/RRD_Logo.jpg" style="width:27px;height:130px"/>
                                    		</div>
                                    	</td>
                                    </tr>	                                    	                                    	                                    	                                    
	                            </table>
	                        </div>
	                    </div>
	                </div>
            	</t>
            </t>
		</template>		
		
</data>
</openerp>
								            