<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <!--  WIZARD DI APPROVAZIONE -->
        <record id="view_sale_order_approve" model="ir.ui.view">
            <field name="name">Approve Order</field>
            <field name="model">sale.order.approve</field>
            <field name="arch" type="xml">
                <form string="Order Approve">
                    <separator colspan="4" string="Do you really want to approve the selected order(s)?" />
                    <footer>
                        <button name="approve_order" string="Approve" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_sale_order_approve" model="ir.actions.act_window">
            <field name="name">Approve Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.approve</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sale_order_approve"/>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <record model="ir.values" id="sale_order_approve">
            <field name="model_id" ref="sale.model_sale_order" />
            <field name="name">Approve Orders</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_sale_order_approve'))" />
            <field name="key">action</field>
            <field name="model">sale.order</field>         
        </record>        
        
        <!-- WIZARD DI CONFERMA -->
        <record id="view_sale_order_confirm" model="ir.ui.view">
            <field name="name">Confirm Order</field>
            <field name="model">sale.order.confirm</field>
            <field name="arch" type="xml">
                <form string="Order Confirm">
                    <separator colspan="4" string="Do you really want to confirm the order(s)?" />
                    <footer>
                        <button name="confirm_order" string="Confirm" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_sale_order_confirm" model="ir.actions.act_window">
            <field name="name">Confirm Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.confirm</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sale_order_confirm"/>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <record model="ir.values" id="sale_order_confirm">
            <field name="model_id" ref="sale.model_sale_order" />
            <field name="name">Confirm Orders</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_sale_order_confirm'))" />
            <field name="key">action</field>
            <field name="model">sale.order</field>         
        </record>
    </data>
</openerp>
