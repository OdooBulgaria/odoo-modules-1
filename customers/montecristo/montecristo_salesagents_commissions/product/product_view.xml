<?xml version="1.0" encoding="utf-8"?>

<openerp>
	<data>

		<!--  					PRODUCT.PRODUCT FORM				-->
		<record id="view_product_product_salesagent_commission_montecristo" model="ir.ui.view">
			<field name="name">product.product.form.salesagent.commission.montecristo</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="salesagent_commissions.view_product_product_salesagent_commission"/>
			<field name="arch" type="xml">
        		<xpath expr="//field[@name='commission']" position="after">
                    <field name="subagent_commission_reduction"/>
            	</xpath>  
			</field>
		</record>
		
        <record id="montecristo_product_template_form_view" model="ir.ui.view">
            <field name="name">montecristo.product.form.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
             <field name="arch" type="xml">
                <xpath expr="//notebook/page[@string='Procurements']"  position="attributes">
                    <attribute name="groups">base.group_sale_manager</attribute>
                </xpath>    
             </field>
        </record>		

	</data>
</openerp>


