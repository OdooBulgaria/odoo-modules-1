<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>

        <!-- ======================================================	-->
        <!--  				ACCOUNT.INVOICE.LINE TREE				-->
        <!-- ======================================================	-->
        <record id="view_invoice_line_tree_salesagent_montecristo" model="ir.ui.view">
            <field name="name">account.invoice.line.tree.salesagent.montecristo</field>
            <field name="model">account.invoice.line</field>
            <field name="inherit_id" ref="account.view_invoice_line_tree"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='commission']" position="after">
                  	<field name="commission_base"/>
				</xpath>	            	
            </field>
        </record>
        

        <!--========================================================-->
        <!--				COMMISSION SUMMARY - TREE					-->
        <!--========================================================-->
        <record id="view_invoice_provvigioni_tree_montecristo" model="ir.ui.view">
            <field name="name">account.invoice.line.provvigioni.tree.montecristo</field>
            <field name="model">account.invoice.line</field>
            <field name="inherit_id" ref="salesagent_commissions.view_invoice_provvigioni_tree"/>
            <field name="arch" type="xml">
            	<xpath expr="//tree[@string='Commissions']" position="attributes">
            		<attribute name="colors">darkorange:paid_commission != False and paid_commission_base != False</attribute>
            	</xpath>	
                <xpath expr="//tree[@string='Commissions']/field[@name='payment_commission_note']" position="after">
                    <field name="salesagent_id_base" />
	                <field name="commission_percentage_base"/>
                    <field name="commission_base" sum="commissions_base"/>
                    <field name="payment_commission_date_base"/>
                    <field name="payment_commission_note_base"/>
                    <field name="paid_commission" invisible="1"/>
                    <field name="paid_commission_base" invisible="1"/>
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>
