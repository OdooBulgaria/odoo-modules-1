<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="wkf_reservation" model="workflow">
            <field name="name">stock.template.reservation.basic</field>
            <field name="osv">stock.template.reservation</field>
            <field name="on_create">True</field>
        </record>

        <!-- Activity -->
        <record id="act_pre_init" model="workflow.activity">
            <field name="wkf_id" ref="wkf_reservation"/>
            <field name="flow_start">True</field>
            <field name="name">pre_init</field>
        </record>
        <record id="act_draft" model="workflow.activity">
            <field name="wkf_id" ref="wkf_reservation"/>
            <field name="name">draft</field>
            <field name="kind">function</field>
            <field name="action">start_reservation()</field>
        </record>
        <record id="act_confirmed" model="workflow.activity">
            <field name="wkf_id" ref="wkf_reservation"/>
            <field name="name">confirmed</field>
            <field name="kind">function</field>
            <field name="action">confirm_reservation()</field>
        </record>        
        <record id="act_done" model="workflow.activity">
            <field name="wkf_id" ref="wkf_reservation"/>
            <field name="name">done</field>
            <field name="flow_stop">True</field>            
            <field name="kind">function</field>
            <field name="action">write({'state':'done'})</field>
        </record>      
        <record id="act_cancel" model="workflow.activity">
            <field name="wkf_id" ref="wkf_reservation"/>
            <field name="name">cancel</field>
            <field name="flow_stop">True</field>            
            <field name="kind">function</field>
            <field name="action">write({'state':'cancel'})</field>
        </record>             
        
        <!-- Transistion -->
        <record id="trans_preinit_draft" model="workflow.transition">
            <field name="act_from" ref="act_pre_init"/>
            <field name="act_to" ref="act_draft"/>
            <field name="signal">reservation_start</field>
        </record>
        <record id="trans_draft_confirmed" model="workflow.transition">
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_confirmed"/>
            <field name="signal">reservation_confirm</field>
        </record>        
        <record id="trans_confirmed_done" model="workflow.transition">
            <field name="act_from" ref="act_confirmed"/>
            <field name="act_to" ref="act_done"/>
            <field name="signal">reservation_close</field>
        </record>          
        <record id="trans_draft_cancel" model="workflow.transition">
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_cancel"/>
            <field name="signal">reservation_cancel</field>
        </record>     
        <record id="trans_pre_init_cancel" model="workflow.transition">
            <field name="act_from" ref="act_pre_init"/>
            <field name="act_to" ref="act_cancel"/>
            <field name="signal">reservation_cancel</field>
        </record>            

    </data>
</openerp>
