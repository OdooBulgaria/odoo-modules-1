<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>    

        <record id="view_massive_transfer" model="ir.ui.view">
            <field name="name">Massive Transfer</field>
            <field name="model">wizard.massive.transfer</field>
            <field name="arch" type="xml">
                <form string="Order Confirm">
                    <separator colspan="4" string="Lines" />                    
                    <field name="picking_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="origin"/>
                            <field name="backorder_id"/>
                            <field name="state"/>                           
                        </tree>
                    </field>
                    <footer>
                        <button name="do_massive_transfer" string="Transfer" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_massive_transfer" model="ir.actions.act_window">
            <field name="name">Massive Transfer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.massive.transfer</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_massive_transfer"/>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <record model="ir.values" id="massive_transfer">
            <field name="name">Massive Transfer</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_massive_transfer'))" />
            <field name="key">action</field>
            <field name="model">stock.picking</field>         
        </record>
    </data>
</openerp>
