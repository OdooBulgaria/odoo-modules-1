<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>          
        
        <record id="wizard_assign_stock_number" model="ir.ui.view">
            <field name="name">Assign stock numbers</field>
            <field name="model">wizard.assign.stock.number</field>
            <field name="arch" type="xml">
                <form string="Assign Stock Number" version="7.0">
  	              <field name="season_id" required="1"/>
  	              <separator colspan="4" string="Excluded Categories" /> 
                  <field name="category_ids"/>
                  <footer>
                      <button string="Assign" name="assign_stock_number" type="object" class="oe_highlight"/>
                      	or
                      <button string="Cancel" class="oe_link" special="cancel"/>
                  </footer>
                </form>
            </field>
        </record>

        <record id="action_assign_stock_number" model="ir.actions.act_window">
            <field name="name">Assign stock numbers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.assign.stock.number</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
	
        <menuitem 
        	id="menu_assign_stock_number" 
        	name="Assign Stock Numbers" 
        	parent="l10n_it_ddt_makeover.menu_stock_products_moves"  
        	sequence="2" 
        	action="action_assign_stock_number"/>               
        
    </data>
</openerp>
