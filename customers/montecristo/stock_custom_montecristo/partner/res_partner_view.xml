<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_partner_montecristo_rating" model="ir.ui.view">
            <field name="name">view.partner.montecristo.rating</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="l10n_it_ddt.view_partner_form_ddt"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@string='Shipping Informations']" position="before">
                    <group string="Rating">
                        <label for="financial_rating1"/>
                        <div>
                            <field name="financial_rating1" nolabel="1" class="oe_inline"/>
                            <field name="financial_rating2" nolabel="1" class="oe_inline"/>
                        </div>                        
                        <field name="internal_rating"/>
                    </group>
                </xpath>
            </field>
        </record>

        
    </data>
</openerp>
