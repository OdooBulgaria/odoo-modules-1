<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
		<template id="report_purchaseorder_document_mattioli" inherit_id="purchase.report_purchaseorder_document">
			<xpath expr="//div[@class='page']/div[@class='row']/div[@class='col-xs-6']" position="replace">
                <div class="col-xs-6">
                    <strong>Indirizzo di spedizione:</strong>
                    <div>
						<div><span>Strada Tuscanese, 23</span></div>
						<div><span>Viterbo 01100</span></div>
						<div><span>Italia</span></div>
						<div><span>Tel.: 0761.270303 - 0761.250345 - 0761.352756</span></div>
                    </div>
               	</div>			    
			</xpath>
			
			<xpath expr="//div[@t-field='o.partner_id']" position="before">
			    <strong>Spett.le</strong>			    
			</xpath>			
			
			<xpath expr="//h2[text()='Request for Quotation N°']" position="replace">
			    <h2>Preventivo N°</h2>			    
			</xpath>		
			
			<xpath expr="//p[@t-field='o.date_order']" position="attributes">
				<attribute name="t-field-options">{"format":"dd/MM/yyyy"}</attribute>			    
			</xpath>			

			<xpath expr="//th/strong[text()='Date Req.']/.." position="replace" />		
			<xpath expr="//span[@t-field='line.date_planned']/.." position="replace" />								

			<xpath expr="//th/strong[text()='Qty']/.." position="attributes">
				<attribute name="class">text-center</attribute>
			</xpath>		
								
			<xpath expr="//th/strong[text()='Net Price']/.." position="replace">
	            <th class="text-center"><strong>Importo</strong></th>			    
			</xpath>				

			<xpath expr="//th/strong[text()='Unit Price']/.." position="replace">
	            <th class="text-center"><strong>Prezzo</strong></th>
	            <th class="text-center"><strong>Sconto</strong></th>			    
			</xpath>				
												
			<xpath expr="//th/strong[text()='Taxes']/.." position="replace" />
						
			<xpath expr="//span[contains(@t-esc, 'join(map(lambda x: x.name, line.taxes_id))')]/.." position="replace" />

			<xpath expr="//span[@t-field='line.product_qty']/.." position="replace">
	            <td class="text-right">
	                <t t-if="line.uos_id">
		                <span t-esc="'%.0f'%(line.product_qty)"/>
		                <span t-field="line.product_uom.name" groups="product.group_uom"/>	
		                <span>/</span>	                	
		                <span t-field="line.uos_qty"/>
		                <span t-field="line.uos_id.name" groups="product.group_uom"/>		                    
	                </t>
	                <t t-if="not line.uos_id">
		                <span t-field="line.product_qty"/>
		                <span t-field="line.product_uom.name" groups="product.group_uom"/>	                    
	                </t>
	            </td>			    
			</xpath>			
			
			<xpath expr="//span[@t-field='line.price_unit']/.." position="replace">
	            <td class="text-right">
	                <t t-if="line.uos_id">
						<span t-field="line.price_uos"/>		                    
	                </t>
	                <t t-if="not line.uos_id">
						<span t-field="line.price_unit"/>                   
	                </t>
	            </td>
	            <td class="text-right">
					<t t-if="line.discount > 0">
						<span t-field="line.discount"/>
					</t>
					<t t-if="line.discount == 0">
						<span>/</span>
					</t>                  
	            </td>	            			    
			</xpath>
			
			<xpath expr="//div[@class='col-xs-4 pull-right']/table/tr/td[text()='Taxes']/.." position="replace" />	
			
			<xpath expr="//div[@class='col-xs-4 pull-right']/table/tr/td/strong[text()='Total']/../.." position="replace" />				

			<xpath expr="//p[@t-field='o.notes']" position="after">
			    <br />
	            <p t-if="o.payment_term_id">
	                <strong>Condizioni di Pagamento:</strong>
	                <span t-field="o.payment_term_id"/>
	            </p>			    
			</xpath>				
								
												
		</template>
    </data>
</openerp>

