<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		
		<template id="mattioli_report_product_barcode">
		    <t t-call="report.html_container">
		        <t t-foreach="docs" t-as="d">
					<t t-set="o" t-value="get_record(d)"/>
		            <t>
		                <div class="page">
		                    <div class="oe_structure"/>
		                    <div class="row">
		                        <div class="col-xs-12">
		                            <table class="table table-condensed" style="border-bottom: 0px solid white !important;">
		                                <thead>
		                                    <tr>
		                                        <th style="text-align: center;">
		                                            <img t-att-src="'data:image/png;base64,%s' % d.company_id.logo" style="max-height: 45px;"/>
		                                        </th>
		                                    </tr>
		                                </thead>
		                                <tbody>
		                                    <tr>
		                                        <td>
		                                           	<b><div style="text-align: center;" t-esc="o[0][0]"/></b>
		                                        </td>
		                                    </tr>
		                                </tbody>
		                            </table>
   		                            <table class="table table-condensed" style="border-bottom: 3px solid black !important;"><thead><th> </th></thead></table>
		                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o[0][1], 300, 70)" style="width:300px;height:60px"/>
		                            <p class="text-center" t-esc="o[0][1]"/>
		                            <div t-esc="o[0][2]"/>
		                        </div>
		                    </div>
		                </div>
		            </t>
		        </t>
		    </t>
		</template>			

</data>
</openerp>
								            