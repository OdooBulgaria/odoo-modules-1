<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="mattioli_package_manager_view_picking_form" model="ir.ui.view">
            <field name="name">mattioli.package.manager.stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
             	<xpath expr="//button[@name='action_assign']" position="attributes">
                	<attribute name="context">{'lines':move_lines}</attribute>
             	</xpath>   	
            </field>  
		</record>

        <record id="mattioli_view_quant_package_form" model="ir.ui.view">
            <field name="name">mattioli.view.quant.package.form</field>
            <field name="model">stock.quant.package</field>
            <field name="inherit_id" ref="stock.view_quant_package_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='ul_id']" position="before">
            		<field name="is_open" invisible="1" readonly="1"/>            		
            		<label for="is_open" string="Open" attrs="{'invisible':[('is_open','!=',True)]}"/>
            		<label for="is_open" string="Close" attrs="{'invisible':[('is_open','=',True)]}"/>
            	</xpath>
             	<xpath expr="//field[@name='children_ids']" position="after">
            		<separator string="Additional information"/>
                	<field name="notes" class="oe_inline" placeholder="Additional notes..."/>
             	</xpath>
            </field>  
		</record>		

        <record model="ir.ui.view" id="mattioli_view_quant_package_tree">
            <field name="name">stock.quant.package.tree</field>
            <field name="model">stock.quant.package</field>
            <field name="inherit_id" ref="stock.view_quant_package_tree"/>            
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='complete_name']" position="after">
            		<field name="is_open"/>
            	</xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="mattioli_view_inventory_form">
            <field name="name">mattioli.view.inventory.form</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form"/>            
            <field name="arch" type="xml">
            	<xpath expr="//button[@name='reset_real_qty']" position="attributes">
            		<attribute name="invisible">1</attribute>
            	</xpath>
            </field>
        </record>        
        				        
    </data>
</openerp>
