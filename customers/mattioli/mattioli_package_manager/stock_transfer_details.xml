<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_stock_enter_transfer_details_mattioli" model="ir.ui.view">
            <field name="name">view.stock.enter.transfer.details.mattioli</field>
            <field name="model">stock.transfer_details</field>
            <field name="inherit_id" ref="stock.view_stock_enter_transfer_details"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='package_id']" position="attributes">
                    <attribute name="domain">[('quant_ids.product_id','=',product_id)]</attribute>
                    <attribute name="on_change">onchange_package_id(product_id, package_id, quantity)</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
