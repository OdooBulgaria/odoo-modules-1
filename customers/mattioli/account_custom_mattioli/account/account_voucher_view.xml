<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

        <record id="mattioli_view_voucher_tree" model="ir.ui.view">
            <field name="name">mattioli.view.voucher.tree</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher.view_voucher_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount']" position="before" >
                    <field name="untaxed_amount" sum="Totale Imponibile" />
                    <field name="tax_amount" sum="Totale Imposta" />
                </xpath>
            </field>
        </record>
        
        <record id="mattioli_view_distinta_riba_form" model="ir.ui.view">
            <field name="name">mattioli.view.distinta.riba.form</field>
            <field name="model">riba.distinta</field>
            <field name="inherit_id" ref="account_ricevute_bancarie.view_distinta_riba_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@string='Accredited']" position="attributes" >
                    <attribute name="attrs">{'invisible':[('type','=','incasso')]}</attribute>
                </xpath>
            </field>
        </record>        

        <record id="view_vendor_payment_form_mattioli" model="ir.ui.view">
            <field name="name">mattioli.view.vendor.payment.form</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher_makeover.view_vendor_payment_document_reference_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='ref_name']" position="after" >
                    <field name="date_document_origin" readonly="1"/>
                </xpath>            	
                <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='ref_name']" position="attributes" >
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='date_original']" position="attributes" >
                    <attribute name="string">Data Registrazione</attribute>
                </xpath>                
            </field>
        </record>        
        
</data>
</openerp>
