<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="product_uom_mattioli_form_view" model="ir.ui.view">
            <field name="name">product.uom.form.mattioli</field>
            <field name="model">product.uom</field>
            <field name="inherit_id" ref="product.product_uom_form_view"/>            
            <field name="arch" type="xml">
                <xpath expr="//field[@name='uom_type']" position="after">
                    <field name="is_cubic_meter" />
                    <field name="is_square_meter" />
                </xpath>
            </field>
        </record>        
        
        <record id="mattioli_product_view_form" model="ir.ui.view">
            <field name="name">mattioli.product.form.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
             <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="after"> 
                	<field name="is_shipping"/>
                </xpath>                  
  		        <xpath expr="//div[@name='options']" position="inside">
                    <div>
                        <field name="is_wood" on_change="onchange_is_wood(is_wood)"/>
                        <label for="is_wood"/>
                    </div>  		        
  		        </xpath>
   		        <xpath expr="//group[@name='procurement_uom']" position="attributes">
					<attribute name="invisible">1</attribute>		        
  		        </xpath>   		        
                <xpath expr="//page[@string='Sales']" position="after">
					<page string="Wood Features" attrs="{'invisible':[('is_wood','=',False)]}" name="wood_features">
                        <group>
                        	<field name="thickness" attrs="{'required':[('is_wood','=',True)]}"/>
						</group>
						<group>                        	
                        	<field name="increment_thickness" attrs="{'required':[('is_wood','=',True)]}"/>
                        	<field name="increment_uom_thickness" attrs="{'required':[('is_wood','=',True)]}"/>
                        </group>
						<group>                        	
                        	<field name="increment_width" attrs="{'required':[('is_wood','=',True)]}"/>
                        	<field name="increment_uom_width" attrs="{'required':[('is_wood','=',True)]}"/>
                        </group>
						<group>                        	
                        	<field name="increment_length" attrs="{'required':[('is_wood','=',True)]}"/>
                        	<field name="increment_uom_length" attrs="{'required':[('is_wood','=',True)]}"/>
                        </group>                                                
						<group>
							<field name="essence"/>
							<field name="seasoning"/>
							<field name="wood_quality"/>
							<field name="wood_type"/>	
							<field name="finiture"/>																																											
                        </group>
                    </page>
                </xpath>                
             </field>
        </record>

        <record id="mattioli_product_template_only_view_form" model="ir.ui.view">
            <field name="name">mattioli.product.form.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
             <field name="arch" type="xml">
  		        <xpath expr="//field[@name='default_code']" position="attributes">
					<attribute name="invisible">1</attribute>		        
  		        </xpath>
   		        <xpath expr="//field[@name='ean13']" position="attributes">
					<attribute name="invisible">1</attribute>		        
  		        </xpath> 		                     
             </field>
        </record>        

        <record id="mattioli_product_normal_form_view" model="ir.ui.view">
            <field name="name">mattioli.product.form.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
             <field name="arch" type="xml">
  		        <xpath expr="//field[@name='default_code']" position="attributes">
					<attribute name="readonly">1</attribute>		        
  		        </xpath>                    
             </field>
        </record>             
        
    </data>
</openerp>
