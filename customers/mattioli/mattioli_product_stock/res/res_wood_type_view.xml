<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_wood_type_tree" model="ir.ui.view">
            <field name="name">res.wood.type.tree</field>
            <field name="model">res.wood.type</field>
            <field name="arch" type="xml">
                <tree string="Wood Types">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="view_wood_type_form" model="ir.ui.view">
            <field name="name">res.wood.type.form</field>
            <field name="model">res.wood.type</field>
            <field name="arch" type="xml">
                <form string="Wood Type">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_wood_type" model="ir.actions.act_window">
            <field name="name">Wood Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.wood.type</field>
            <field name="view_type">form</field>
            <field name="help">Display and manage the list of all wood types that can be assigned to your product records.</field>
        </record>
		
        <menuitem action="action_wood_type" id="menu_wood_type" parent="stock.menu_product_in_config_stock" sequence="23" groups="base.group_no_one"/>

    </data>
</openerp>
