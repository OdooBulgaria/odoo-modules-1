            <field name="arch" type="xml">
                <tree string="Finiture">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="view_finiture_form" model="ir.ui.view">
            <field name="name">res.finiture.form</field>
            <field name="model">res.finiture</field>
            <field name="arch" type="xml">
                <form string="Finitura">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </group>
                </form>
