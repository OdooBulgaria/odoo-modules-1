<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="mattioli_quant_search_view" model="ir.ui.view">
            <field name="name">mattioli.stock.quant.search</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.quant_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='owner_id']" position="after">
                    <field name="essence"/>
                    <field name="seasoning"/>
                    <field name="wood_type"/>
                    <field name="wood_quality"/>
                    <field name="thickness"/>
                </xpath>
                <xpath expr="//filter[@string='Company']" position="after">
                       <filter string='Essence' context="{'group_by' : 'essence'}"/>          
                       <filter string='Seasoning' context="{'group_by' : 'seasoning'}"/>          
                       <filter string='Wood Type' context="{'group_by' : 'wood_type'}"/>          
                       <filter string='Wood Quality' context="{'group_by' : 'wood_quality'}"/>                                 	                       	                       	         	
                </xpath>
            </field>
        </record>
        
        <record id="mattioli_view_quant_package_form_stock" model="ir.ui.view">
            <field name="name">mattioli.view.quant.package.stock.form</field>
            <field name="model">stock.quant.package</field>
            <field name="inherit_id" ref="stock.view_quant_package_form"/>
            <field name="arch" type="xml">
             	<xpath expr="//field[@name='qty']" position="after">
                    <field name="uom_id"/>
                    <field name="uos_qty"/>
                    <field name="uos_id"/>
             	</xpath>
            </field>  
		</record>	        
        
        <record model="ir.ui.view" id="mattioli_view_stock_quant_tree">
            <field name="name">mattioli.stock.quant.tree</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='qty']" position="after">
                    <field name="uom_id"/>
                    <field name="uos_qty"/>
                    <field name="uos_id"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="essence" invisible="1"/>
                    <field name="seasoning" invisible="1"/>
                    <field name="wood_type" invisible="1"/>
                    <field name="wood_quality" invisible="1"/>
                    <field name="thickness"/>
                    <field name="is_open_pckg"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
