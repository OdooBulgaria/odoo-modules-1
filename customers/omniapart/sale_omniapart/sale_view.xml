<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_order_tree_omniapart" model="ir.ui.view">
            <field name="name">view.order.tree.omniapart</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
					<field name="invoice_exists"/>
                </xpath>
                <xpath expr="//tree[@string='Sales Orders']" position="attributes">
					<attribute name="colors">grey:state=='cancel';blue:state in ('waiting_date','manual') and not invoice_exists;darkblue: state in ('waiting_date','manual') and invoice_exists;red:state in ('invoice_except','shipping_except')</attribute>                    
                </xpath>
            </field>
        </record>          
        
        <record id="view_order_form_omniapart" model="ir.ui.view">
            <field name="name">view.order.form.omniapart</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='sale_total']" position="after">
                    <group style="width: 65%%">
       					<field name="part_payment"/>
       					<field name="part_payment_amount"/>
                    </group>
                </xpath>
            </field>
        </record>       
       
    </data>
</openerp>
