<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Partner -->
        <record id="view_level2_partner_form" model="ir.ui.view">
            <field name="name">crm.custom.res.partner.level2.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/label[@for='street']" position="before">
                    <field name="is_partner_level2" on_change="on_change_is_partner_level2(is_partner_level2)"/>
                </xpath>               
                <xpath expr="//form/sheet/notebook/page[@name='sales_purchases']" position="attributes"> 
                	<attribute name="attrs">{'invisible':[('is_partner_level2','=',True)]}</attribute>
                </xpath>
                <xpath expr="//form/sheet/notebook/page[@name='accounting']" position="attributes"> 
                	<attribute name="attrs">{'invisible':['|',('is_partner_level2','=',True),'&amp;',('is_company','=',False),('parent_id','!=',False)]}</attribute>
                </xpath>     
                <xpath expr="//form/sheet/notebook/page[@name='accounting_disabled']" position="attributes"> 
                	<attribute name="attrs">{'invisible':['|',('is_company','=',True),('parent_id','=',False)]}</attribute>
                </xpath>                  
                
                <xpath expr="//field[@name='comment']" position="before">
                    <h4>Scopo/Campo di applicazione della certificazione (ed eventuali esclusioni)</h4>
                    <div>Indicare le attivit√† (progettazione, produzione, installazione, assistenza, ecc.) ed i prodotti/servizi (ad esempio: progettazione e produzione di giocattoli,...)</div>
                </xpath>
                <xpath expr="//notebook" position="inside">
                        <page name='company_features' string="Other Informations">
                            <group>
                                <group>
            	                    <field name="omnia_parent_name"/>
                                    <field name="average_sales_volume"/>
                                    <field name="subcontractors_number"/>
                                </group>
                                <group string="Number of employees">
                                    <field name="det_period_employees"/>
                                    <field name="undet_period_employees"/>
                                    <field name="part_time_employees"/>
                                    <field name="total_employees"/>
                                </group>
                            </group>
                        </page>
                </xpath>
            </field>
        </record>

        <record id="action_level2_partner_form" model="ir.actions.act_window">
            <field name="name">Prospects</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>            
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>            
            <field name="domain">[('is_partner_level2','=',1)]</field>
            <field name="context">{'default_supplier':0, 'default_customer':0, 'default_individual':0, 'default_is_company':1, 'default_is_partner_level2':1, 'search_default_is_partner_level2':1}</field>
            <field name="filter" eval="True"/>            
        </record>

        <record id="action_level2_partner_form_view2" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_level2_partner_form"/>
            <field name="act_window_id" ref="action_level2_partner_form"/>
        </record>

        <menuitem id="menu_level2_partner_form" parent="base.menu_sales" action="action_level2_partner_form" sequence="3"/>

    </data>
</openerp>
