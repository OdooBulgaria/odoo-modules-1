<?xml version="1.0"?>
<openerp>
    <data>

     <record model="ir.ui.view" id="view_account_analytic_account_omniapart_form">
            <field name="name">account.analytic.account.omniapart.form</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='manager_id']" position="after">
	                <field name="prospect_id"  context="{'default_customer': 0, 'default_is_partner_level2': 1, 'search_default_is_partner_level2': 1}" domain="[('is_partner_level2', '=', True)]"/>
				</xpath>
                <notebook position="inside">
                    <page name='other_informations' string="Altre Informazioni">
	                    <group>
	                    	<field name="c_number"/>
	                    	<field name="zig"/>
	                    	<field name="contract_amount"/>
	                    	<field name="minimal_daily_cost"/>	                  	                    	
	                    </group>
                    	<field name="project_ids" readonly="1" widget="many2many_kanban"/>	  	                    
                    </page>
                </notebook>	
            </field>
     </record>

     <!-- analytic_user_funct_grid views -->
     <record model="ir.ui.view" id="analytic_user_funct_grid_tree_omniapart">
         <field name="name">analytic_user_funct_grid.tree.omniapart</field>
         <field name="model">analytic.user.funct.grid</field>
         <field name="inherit_id" ref="analytic_user_function.analytic_user_funct_grid_tree"/>         
         <field name="arch" type="xml">
             <xpath expr="//field[@name='uom_id']" position="after">
                <field name="date_from" />
                <field name="date_to" />                
	         </xpath>             
         </field>
     </record>

     <record model="ir.ui.view" id="analytic_user_funct_grid_form_omniapart">
         <field name="name">analytic_user_funct_grid.form.omniapart</field>
         <field name="model">analytic.user.funct.grid</field>
         <field name="inherit_id" ref="analytic_user_function.analytic_user_funct_grid_form"/>           
         <field name="arch" type="xml">
             <xpath expr="//field[@name='uom_id']" position="after">
                <field name="date_from" />
                <field name="date_to" />                
	         </xpath>
         </field>
     </record>     
     
    </data>
</openerp>
