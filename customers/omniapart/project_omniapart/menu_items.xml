<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_sector_nace_tree" model="ir.ui.view">
            <field name="name">accreditation.nace.sector.tree</field>
            <field name="model">res.partner.category</field>
            <field name="arch" type="xml">
                <tree string="NACE Sector">
                    <field name="name"/>
                    <field name="parent_id"/>
                </tree>
            </field>
        </record>

        <record id="view_sector_ea_form" model="ir.ui.view">
            <field name="name">accreditation.nace.sector.form</field>
            <field name="model">res.partner.category</field>
            <field name="arch" type="xml">
                <form string="NACE">
                    <group>
                        <field name="name"/>
                        <field name="parent_id"/>
                    </group>                   
                </form>
            </field>
        </record>

        <record id="action_sector_nace" model="ir.actions.act_window">
            <field name="name">Settori NACE</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner.category</field>
            <field name="view_type">form</field>
            <field name="domain">[('parent_id','child_of','NACE')]</field>
            <field name="help">Display and manage the list of all NACE sector that can be required to your company.</field>
        </record>
		
	    	
    	
    	
    <!-- Menu items -->
    <menuitem name="Accreditamento" parent="base.menu_main_pm" id="base.menu_accreditation_top" />

    <menuitem name="Norme" parent="base.menu_accreditation_top" id="accreditation_standard" action="action_accreditation_standard" sequence="22"/>
    <menuitem name="Schemi" parent="base.menu_accreditation_top" id="accreditation_schema" action="action_accreditation_schema" sequence="23"/> 

    <menuitem action="l10n_it_ea_sector.action_sector_ea" string="Settori EA" id="l10n_it_ea_sector.menu_sector_ea" parent="base.menu_accreditation_top" sequence="20" groups="base.group_no_one"/>

    <menuitem action="action_sector_nace" string="Settori NACE" id="menu_sector_nace" parent="base.menu_accreditation_top" sequence="21" groups="base.group_no_one"/>
        	
    	    	
    </data>
</openerp>
