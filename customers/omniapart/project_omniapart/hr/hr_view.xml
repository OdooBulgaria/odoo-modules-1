<?xml version="1.0"?>
<openerp>
    <data>

	<!--Employee form view -->
	    <record id="view_employee_omniapart_form" model="ir.ui.view">
	        <field name="name">hr.employee.omniapart.form</field>
	        <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>	        
	        <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
	                <field name="partner_id"/>
				</xpath>
                <notebook position="inside">
                    <page name='certifications' string="Norme e Settori">
	                    <field name="standard_ea_rel_ids"> 
	                    	<tree editable="bottom" > 
	                    		<field name="standard_id"/>
	                    		<field name="ea_sector_ids" on_change="onchange_ea_sector_ids(ea_sector_ids)"/>
	                    		<field name="nace_sector_ids" domain="[('parent_id','child_of','NACE')]"/>
	                    	</tree>
	                    </field>
                    </page>                 
                    <page name='zone' string="Zone di competenza">
                    	<group>
                    		<field name="zone"/>
                    	</group>
                    </page>
                </notebook>
	        </field>
	    </record>     
     
    </data>
</openerp>
