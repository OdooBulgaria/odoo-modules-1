<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>          
        
        <record id="wizard_search_invoice" model="ir.ui.view">
            <field name="name">Search Invoice</field>
            <field name="model">wizard.search.invoice</field>
            <field name="arch" type="xml">
                <form string="Search Invoice" version="7.0">
                  <group>
	  	              <field name="partner_id" on_change="onchange_partner_id(partner_id)" domain="[('customer','=',True)]"/>
	  	              <field string="Contratto" required="1" name="analytic_id"/>
	  	              <field string="Data Fattura Da" name="date_from"/>
	  	              <field string="Data Fattura A" name="date_to"/>                      
                  </group>
                  <footer>
                      <button string="Cerca" name="search_invoice" type="object" class="oe_highlight"/>
                      	or
                      <button string="Annulla" class="oe_link" special="cancel"/>
                  </footer>
                </form>
            </field>
        </record>

        <record id="action_search_invoice" model="ir.actions.act_window">
            <field name="name">Cerca Fatture da Contratto</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.search.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
	
        <menuitem 
        	id="menu_search_invoice" 
        	name="Cerca Fatture da Contratto" 
        	parent="base.menu_invoiced"  
        	sequence="10" 
        	action="action_search_invoice"
        	groups="account.group_account_manager,project.group_project_manager"/>               
        
    </data>
</openerp>
