<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

        <!-- Project Task -->
        <record id="view_project_task_omniapart_color_form" model="ir.ui.view">
            <field name="name">project.task.omniapart.color.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='project_id']" position="before">
                    <field name="id" />                        
                </xpath>                
                <xpath expr="//header/field[@name='stage_id']" position="before">
                    <button name="do_close" string="Close Task" type="object" groups="base.group_user"/>
                </xpath>
                <xpath expr='//field[@name="work_ids"]/tree/field[@name="user_id"]' position="after">
                    <field name="to_invoice" />
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                	<newline/>
	                <field name="prospect_id" readonly="1"/>
	                <field name="check" on_change="onchange_checks(project_id, check)"/>
                </xpath>
                <xpath expr="//group[@string='Gantt View']" position="before">
                	<group string="General">
           		     	<field name="c_number" readonly="1"/>
                    	<field name="zig" readonly="1"/>
                	</group>
                </xpath>
                <xpath expr="//field[@name='date_end']" position="after">
                    <field name="force_overlaying"/>
                    <field name="insert_in_calendar"/>
                </xpath>                
                <xpath expr="//page[@string='Extra Info']" position="after">
	                <page string="Informazioni Intervento">
	                    <group>
	                        <field name="referent_name"/>
                        </group>
                        <group>
	                        <field name="start_hour" placeholder="00:00"/>
	                        <field name="end_hour" placeholder="00:00"/>
	                    </group>
	                    <group>
	                        <field name="lavoration_notes"/>
	                    </group>
	                 </page>                    
                </xpath>
            </field>
        </record>

        <record id="view_task_tree2_omniapart" model="ir.ui.view">
            <field name="name">project.task.tree2.omniapart</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>            
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='date_end']" position="after">
            		<field name="date_deadline"/>
            	</xpath>
        	</field>
        </record>           
        
        <record id="view_task_calendar_omniapart" model="ir.ui.view">
            <field name="name">project.task.calendar.omniapart</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_calendar"/>            
            <field name="arch" type="xml">
            	<xpath expr="//calendar" position="attributes">
            		<attribute name="date_start">date_start</attribute>
            		<attribute name="date_stop">date_end</attribute>
            	</xpath>
            	<xpath expr="//calendar/field[@name='project_id']" position="after">
            		<field name="prospect_id"/>
            	</xpath>
        	</field>
        </record>        
        
    </data>
</openerp>
