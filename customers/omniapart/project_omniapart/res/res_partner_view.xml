<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Partner -->
        <record id="view_project_level2_partner_form" model="ir.ui.view">
            <field name="name">project.custom.res.partner.level2.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name='standard' string="Norme e Settori">
	                    <field name="standard_ea_rel_ids"> 
	                    	<tree editable="bottom" > 
	                    		<field name="standard_id"/>
	                    		<field name="ea_sector_ids" on_change="onchange_ea_sector_ids(ea_sector_ids)"/>
	                    		<field name="nace_sector_ids" domain="[('parent_id','child_of','NACE')]"/>
	                    	</tree>
	                    </field>
                    </page>
                </xpath>
            </field>
        </record>
        
        <record id="view_project_level2_partner_form2" model="ir.ui.view">
            <field name="name">project.custom.res.partner.level2.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="l10n_it_ea_sector.view_res_partner_easector"/>
            <field name="arch" type="xml">
				<xpath expr="//notebook/page[@string='Settori']" position="replace">					
				</xpath>
            </field>
        </record>        
    </data>
</openerp>
