<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_hr_timesheet_invoice_create_omniapart" model="ir.ui.view">
            <field name="name">hr.timesheet.invoice.create.form.omniapart</field>
            <field name="model">hr.timesheet.invoice.create</field>
            <field name="inherit_id" ref="hr_timesheet_invoice.view_hr_timesheet_invoice_create"/>            
            <field name="arch" type="xml">
            	<xpath expr='//field[@name="date"]' position="before">
					<field name="task"/>
					<field name="contract"/>
            	</xpath>            
            	<xpath expr='//field[@name="product"]' position="after">
					<field name="date_invoice"/>
                    <field name="journal_id" />
                    <field name="fpos_id" />
            	</xpath>
            </field>
        </record>

    </data>
</openerp>
