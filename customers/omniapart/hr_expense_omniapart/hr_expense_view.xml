<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_expenses_form_omniapart" model="ir.ui.view">
            <field name="name">hr.expense.form.omniapart</field>
            <field name="model">hr.expense.expense</field>
			<field name="inherit_id" ref="hr_expense.view_expenses_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='journal_id']" position="attributes">
            		<attribute name="domain">[('type', 'in', ['purchase','general'])]</attribute>
            	</xpath>
            	<xpath expr='//field[@name="line_ids"]/tree/field[@name="unit_quantity"]' position="after">
            		<field name="to_invoice"/>
            	</xpath>
            	<xpath expr='//button[@name="draft"]' position="after">
                    <button name="set_draft" attrs="{'invisible':['|',('state','!=','done'),'&amp;',('state','=','done'),('account_move_id','not in',[False, None])]}" string="Set to Draft" type="object" groups="base.group_hr_user" />
            	</xpath>
            </field>
        </record>

    </data>
</openerp>
