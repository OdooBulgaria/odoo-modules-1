<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
        
    <record id="view_production_lot_form_omniapart" model="ir.ui.view">
        <field name="name">view.production.lot.form.omniapart</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">		
			<xpath expr="//field[@name='ref']" position="after">
				<field name="partner_id"/>
			</xpath>
			<xpath expr="//button[@name='action_traceability']" position="before">
	            <button name="action_print_barcode" icon="fa-print" class="oe_stat_button" string="Print" type="object"/>		    
			</xpath>
						
        </field>
    </record>  

    <record id="view_production_lot_tree_omniapart" model="ir.ui.view">
        <field name="name">view.production.lot.tree.omniapart</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree"/>
        <field name="arch" type="xml">		
			<xpath expr="//field[@name='product_id']" position="after">
				<field name="partner_id"/>
			</xpath>
        </field>
    </record>      
    
    <record id="search_product_lot_filter_omniapart" model="ir.ui.view">
        <field name="name">search.product.lot.filter.omniapart</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.search_product_lot_filter"/>
        <field name="arch" type="xml">		
			<xpath expr="//field[@name='product_id']" position="after">
				<field name="partner_id"/>
			</xpath>
			<xpath expr="//filter[@string='Product']" position="after">
	            <filter string="Partner" icon="terp-accessories-archiver" domain="[]" context="{'group_by':'partner_id'}"/>			    
			</xpath>
        </field>
    </record>          
    
  </data>
</openerp>