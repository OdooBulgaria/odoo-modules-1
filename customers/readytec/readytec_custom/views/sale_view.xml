<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_order_makeover_form">
             <field name="name">sale.order.makeover.form</field>
             <field name="model">sale.order</field>
             <field name="inherit_id" ref="sale.view_order_form" />
             <field name="arch" type="xml">
                <xpath expr="//page/field[@name='order_line']" position="attributes">
                    <attribute name="context">{'pricelist_id': pricelist_id}</attribute>
                </xpath>
                <xpath expr="//tree[@string='Sales Order Lines']" position="attributes">
                    <attribute name="editable"></attribute>
                </xpath>
             </field>
        </record>

    </data>
</openerp>
