<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Account Invoice Customer -->
        <record id="readytec_custom_form_view" model="ir.ui.view">
            <field name="name">account.invoice.form.readytec</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_payment_extension.invoice_form4"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@string='Print']" position="attributes">
                    <attribute name="invisible">1</attribute>
                    <attribute name="attrs">{}</attribute>              	
                </xpath>
                <xpath expr="//field[@name='payment_type']" position="attributes">
                    <attribute name="string">Tipo Flusso SEPA</attribute>          	
                </xpath>
            </field>
        </record>

        <!-- Account Invoice Supplier -->
        <record id="readytec_supplier_form_view" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.readytec</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_payment_extension.invoice_supplier_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_type']" position="attributes">
                    <attribute name="string">Tipo Flusso SEPA</attribute>          	
                </xpath>
            </field>
        </record>
     </data>
</openerp>
