<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<!-- Customize -->

<template id="theme_customize" inherit_id="website_less.theme_customize" name="theme_enark modal">
    <xpath expr="div" position="replace">
        <div id="theme_customize_modal" class="modal fade bs-example-modal-sm">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="loading_backdrop"></div>
                    <div class="modal-header">
                        <button type="button" class="close">Ã—</button>
                        <h4 class="modal-title" id="mySmallModalLabel">Customize your theme</h4>
                    </div>
                    <div class="modal-body panel-group clean-panel-group" id="accordion" role="tablist" aria-multiselectable="true">


            <div class="panel panel-default clean-panel">

          <div id="collapseTwo" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingTwo">
            <div class="panel-body">

                <h5>Change the layout</h5>
                <table name="layout">
                    <tr>
                        <td class=" text-center">
                          <label class="clean-layout-combi center-block">
                            <h6 class="text-center modal-h6 clean-layout-combi">WIDE VIEW</h6>
                            <input name="layoutvar" type="radio" data-xmlid=""/>
                          </label>
                        </td>
                        <td class=" text-center">
                          <label class="clean-layout-combi center-block">
                            <h6 class="text-center modal-h6 clean-layout-combi">BOXED VIEW</h6>
                            <input name="layoutvar" type="radio" data-xmlid="theme_enark.option_layout_boxed"/>
                          </label>
                       </td>
                   </tr>
             </table>


             <h5>Select a background</h5>

             <table name="background-shades">
                <tr>

                    <td>
                        <label class="clean-bg-layout-combi">
                            <img src="/theme_enark/static/src/img/customize/bg_preset_1.gif" alt="LIGHT" class="clean-bg-layout-combi-img"/>
                            <input id="bgvar-1" name="bgcolorvar" type="radio" data-xmlid="theme_enark.option_bg_preset_1"/>
                        </label>
                    </td>
                    <td>
                        <label class="clean-bg-layout-combi">
                            <img src="/theme_enark/static/src/img/customize/bg_preset_2.gif" alt="LIGHT" class="clean-bg-layout-combi-img"/>
                            <input id="bgvar-2" name="bgcolorvar" type="radio" data-xmlid="theme_enark.option_bg_preset_2"/>
                        </label>
                    </td>
                    <td>
                    <label class="clean-bg-layout-combi">
                            <img src="/theme_enark/static/src/img/customize/bg_preset_3.gif" alt="LIGHT" class="clean-bg-layout-combi-img"/>
                            <input id="bgvar-3" name="bgcolorvar" type="radio" data-xmlid="theme_enark.option_bg_preset_3"/>
                        </label>
                    </td>
                    <td>
                        <label class="clean-bg-layout-combi">
                            <img src="/theme_enark/static/src/img/customize/bg_preset_4.gif" alt="COLD" class="clean-bg-layout-combi-img"/>
                            <input id="bgvar-4" name="bgcolorvar" type="radio" data-xmlid="theme_enark.option_bg_preset_4"/>
                        </label>
                    </td>
                    <td>
                        <label class="clean-bg-layout-combi">
                            <img src="/theme_enark/static/src/img/customize/bg_preset_5.gif" alt="COLD" class="clean-bg-layout-combi-img"/>
                            <input id="bgvar-5" name="bgcolorvar" type="radio" data-xmlid="theme_enark.option_bg_preset_5"/>
                        </label>
                    </td>
                    <td>
                    <label class="clean-bg-layout-combi">
                            <img src="/theme_enark/static/src/img/customize/bg_preset_6.gif" alt="COLD" class="clean-bg-layout-combi-img"/>
                            <input id="bgvar-6" name="bgcolorvar" type="radio" data-xmlid="theme_enark.option_bg_preset_6"/>
                        </label>
                    </td>
                </tr>
            </table>
            <h5>Choose the main color</h5>
            <table name="color">
                <tr>
                    <td>
                        <label class="clean-color-combi">
                            <img src="/theme_enark/static/src/img/customize/color_preset_1.gif" alt="Cobalt" class="clean-color-layout-combi"/>
                            <input id="colorvar-1" name="colorvar" type="radio" data-xmlid="theme_enark.option_color_preset_1" />
                        </label>
                    </td>
                    <td>
                        <label class="clean-color-combi">
                            <img src="/theme_enark/static/src/img/customize/color_preset_2.gif" alt="Amethyst" class="clean-color-layout-combi"/>
                            <input id="colorvar-2"  name="colorvar" type="radio" data-xmlid="theme_enark.option_color_preset_2" />
                        </label>
                    </td>
                    <td>
                        <label class="clean-color-combi">
                            <img src="/theme_enark/static/src/img/customize/color_preset_3.gif" alt="Blue" class="clean-color-layout-combi"/>
                            <input id="colorvar-3"  name="colorvar" type="radio" data-xmlid="theme_enark.option_color_preset_3" />
                        </label>
                    </td>
                    <td>
                        <label class="clean-color-combi">
                            <img src="/theme_enark/static/src/img/customize/color_preset_4.gif" alt="Gold" class="clean-color-layout-combi"/>
                            <input id="colorvar-4"  name="colorvar" type="radio" data-xmlid="theme_enark.option_color_preset_4" />
                        </label>
                    </td>
                    <td>
                        <label class="clean-color-combi">
                            <img src="/theme_enark/static/src/img/customize/color_preset_5.gif" alt="Emerald" class="clean-color-layout-combi"/>
                            <input id="colorvar-5"  name="colorvar" type="radio" data-xmlid="theme_enark.option_color_preset_5" />
                        </label>
                    </td>
                    <td>
                        <label class="clean-color-combi">
                            <img src="/theme_enark/static/src/img/customize/color_preset_6.gif" alt="Stone" class="clean-color-layout-combi"/>
                            <input id="colorvar-6"  name="colorvar" type="radio" data-xmlid="theme_enark.option_color_preset_6" />
                        </label>
                    </td>
                </tr>

            </table>

            <h5>Select a FONT combination</h5>
            <table name="font">
                <tr>
                    <td>
                        <label class=" clean-fonts-combi">
                            <span style="font-family:'BebasNeue Regular'; font-size:16px">BebasNeue</span>
                            <span style="font-family:'Ubuntu-Regular'; font-size:15px">/ Ubuntu</span>
                            <input id="fontvar-1" name="fontvar" type="radio" data-xmlid="theme_enark.option_font_UbuntuPtSans"/>
                        </label>
                    </td>
                    <td>
                        <label class=" clean-fonts-combi">
                            <span style="font-family:'MavenPro-Regular'; font-size:14px">MavenPro-Regular</span>
                            <span style="font-family:'Muli-Regular'; font-size:14px" >/ Muli</span>
                            <input id="fontvar-2" name="fontvar" type="radio" data-xmlid="theme_enark.option_font_LatoLightMuli"/>
                        </label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label class=" clean-fonts-combi">
                            <span style="font-family:'Raleway-Regular'; font-size:15px">Ralewy</span>
                            <span style="font-family:'Abel-Regular'; font-size:15px" >/ Abel</span>
                            <input id="fontvar-3" name="fontvar" type="radio" data-xmlid="theme_enark.option_font_OswaldMuli"/>
                        </label>
                    </td>
                    <td>
                        <label class=" clean-fonts-combi">
                            <span style="font-family:'AlegreyaSansSC-Light'; font-size:14px">Alegreya Sans</span>
                            <span style="font-family:'DroidSerif'; font-size:13px" >/ Droid Serif</span>
                            <input id="fontvar-4" name="fontvar" type="radio" data-xmlid="theme_enark.option_font_BitterDroidSerif"/>
                        </label>
                    </td>
                </tr>

                <tr>
                    <td>
                        <label class=" clean-fonts-combi">
                            <span style="font-family:'Quattrocento-Regular'; font-size:14px">Quattrocento</span>
                            <span style="font-family:'Bitter-Regular'; font-size:14px" >/ Bitter</span>
                            <input id="fontvar-5" name="fontvar" type="radio" data-xmlid="theme_enark.option_font_QuattrocentoBitter"/>
                        </label>
                    </td>
                    <td>
                        <label class=" clean-fonts-combi">
                            <span style="font-family:'Vollkorn-Regular'; font-size:14px">Vollkorn</span>
                            <span style="font-family:'PT_Sans-Web-Italic'; font-size:14px" >/ PT Sans</span>
                            <input id="fontvar-6" name="fontvar" type="radio" data-xmlid="theme_enark.option_font_VollkornAlice"/>
                        </label>
                    </td>
                </tr>

            </table>

        </div>
    </div>
</div>

</div>
</div>
</div>
</div>

</xpath>
</template>


