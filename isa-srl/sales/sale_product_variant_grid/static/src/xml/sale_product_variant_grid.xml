<?xml version="1.0" encoding="UTF-8"?>

<templates>	
    <t t-name="sale_product_variant_grid.qtyWidget">
    	<t t-if="widget.num_dims!=0">
	    	<div class="oe_sale_order_grid">
	            <table>
	                <tr>
	                    <th style="background-color: #ffffff;">
	                        <br />
                        </th>
	                    <th class="oe_sale_order_grid" t-att-colspan="widget.columns_lenght">
	                        <t t-esc="widget.attribute_names[0]"/><br />
                        </th>
   	                    <th>
	                        <br />
                        </th>
	                </tr>
	                <tr>
	                    <th>
	                        <t t-esc="widget.attribute_names[1]"/>
	                    </th>
	                    <t t-foreach="widget.columns_name" t-as="column">
	                        <th class="oe_sale_order_grid">
	                            <t t-esc="column.toString()"/><br />
	                        </th>
	                    </t>
	                    <th class="oe_sale_order_grid_head">Total</th>
	                </tr>
	                
	                <tr t-foreach="widget.rows_name" t-as="row">
	                    <td class="oe_sale_order_grid_row"><t t-esc="row.toString()"/></td>
	                    <t t-foreach="widget.columns_name" t-as="column">
	                    		<td>
		                            <input t-if="!widget.get('effective_readonly')" class="oe_sale_order_grid_input" t-att-data-row="row"
		                                t-att-data-column="column" type="text"/>
		                            <div t-if="widget.get('effective_readonly')" class="oe_sale_order_grid_box" t-att-data-row="row"
		                                t-att-data-column="column"/>
	                        	</td>
	                    </t>
	                    <td t-att-data-row-total="row" class="oe_quantities_total"> </td>
	                    <td class="oe_copy_paste_ico"><img t-att-copy="row" src="sale_product_variant_grid/static/src/img/icon_copy.gif" alt="Copia riga"/></td>
	                    <td class="oe_copy_paste_ico"><img t-att-paste="row" src="sale_product_variant_grid/static/src/img/icon_paste.gif" alt="Incolla riga"/></td>	                    
	                </tr>
					
	                <t t-if="widget.num_dims==2">                
	                <tr class="oe_quantities_total">
	                    <td>
	                        <div class="oe_sale_order_grid_adding_tot">
	                            <div class="oe_sale_order_grid_tottot"><span>Total</span></div>
	                        </div>
	                    </td>
						                   
	                    <t t-foreach="widget.columns_name" t-as="column">
	                        <td class="oe_quantities_total">
	                            <span class="oe_sale_order_grid_box" t-att-data-column-total="column">
	                            </span>
	                        </td>
	                    </t>
	                    <td class="oe_quantities_superTotal oe_quantities_total"></td>
	                </tr>
        			        	                
	                </t>
	            </table>
	        </div>
        </t>
		<div align="center">
			<button name="submit" style="font-size:12pt; width:150pt; height: 20pt" t-att-disabled="true">Salva</button>		
			<button name="annulla" style="font-size:12pt; width:150pt; height: 20pt" t-att-disabled="true">Annulla</button>	
		</div>           
    </t>
</templates>
