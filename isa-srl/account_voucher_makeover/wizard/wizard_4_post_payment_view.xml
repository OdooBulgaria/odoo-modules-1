<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="post_payment_view" model="ir.ui.view">
            <field name="name">wizard.post.payment.form</field>
            <field name="model">wizard.post.payment</field>
            <field name="arch" type="xml">
                <form string="Post Payment" version="7.0" >
                       <h1>Payment registered successfully.</h1>
                       <button name="%(action_payment_account_voucher_makeover)d"
                            string="Effettua Nuovo Pagamento"
                            icon="gtk-yes"
                            type="action" />
                       <button name="%(action_payment_wht_account_voucher_makeover)d"
                            string="Effettua Versamento Ritenute"
                            icon="gtk-yes"
                            type="action" />
                </form>
            </field>
        </record>
        
        <record id="post_customer_payment_view" model="ir.ui.view">
            <field name="name">wizard.post.payment.customer.form</field>
            <field name="model">wizard.post.payment</field>
            <field name="arch" type="xml">
                <form string="Post Payment" version="7.0" >
                       <h1>Customer Payment registered successfully.</h1>
                       <button name="%(action_customer_payment_view)d"
                            string="Effettua Nuovo Incasso"
                            icon="gtk-yes"
                            type="action" />
                </form>
            </field>
        </record>
    </data>
</openerp>