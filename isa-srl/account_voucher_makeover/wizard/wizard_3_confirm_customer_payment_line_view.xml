<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="wizard_confirm_customer_payment_line_view" model="ir.ui.view">
          <field name="name">wizard.confirm.customer.payment.line.form</field>
          <field name="model">wizard.confirm.customer.payment.line</field>
          <field name="arch" type="xml">
            <form string="Wizard Customer Payment Confirm Line" version="7.0" >
                <group>
                    <group>
                        <field name="id"/>
                        <field name="partner_id"/>
                        <field name="amount"/>
                        <field name="fnct_amount"/>
                        <field name="payment_type"/>
                        <field name="partner_bank_id"/>
                    </group>
                    <group>
                        <field name="document_number"/>
                        <field name="allowance"/>
                        <field name="amount_allowance" attrs="{'invisible': [('allowance','!=',True)]}"/>
                        <field name="state"/>
                    </group>
                </group>
            </form>
          </field>
        </record>

    </data>
</openerp>
