<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="wizard_set_partial_amount_account_voucher_makeover_view" model="ir.ui.view">
          <field name="name">wizard.set.partial.amount.form</field>
          <field name="model">wizard.set.partial.amount</field>
          <field name="arch" type="xml">
            <form string="Wizard Set Partial Amount" version="7.0">
                <group>
                    <group>
                        <field name="partner_id" readonly="1"/>           
                        <field name="line_id" readonly="True" invisible="1"/>
                        <field name="amount_partial" on_change="onchange_amount_partial(amount_initial, amount_partial, context)"/>
                        <field name="amount_initial" invisible="1"/>
                        <field name="amount_residual" readonly="1"/>
                        <field name="allowance" />
                        <field name="payment_type" />
                        <field name="partner_bank_id"
                        	   domain="[('partner_id','=',partner_id)]" 
                        	   attrs="{'invisible': [('payment_type','!=','B')], 'required': [('payment_type','=','B')]}"/>
                    </group>
                    
                </group>
                <footer>
                    <button name="confirm" icon="gtk-go-forward" string="Save" type="object" default_focus="1" class="oe_highlight" />
                    or 
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
               
            </form>
            </field>
        </record>


    </data>
</openerp>
