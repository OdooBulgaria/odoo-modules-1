<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="account_payment_term_line_makeover_tree" model="ir.ui.view">
            <field name="name">account.payment.term.line.tree.makeover</field>
            <field name="model">account.payment.term.line</field>
            <field name="inherit_id" ref="account.view_payment_term_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='days2']" position="after">           
                       <field name="payment_type" />
                </xpath>
            </field>
        </record>
        
		<record id="account_payment_term_line_makeover_form" model="ir.ui.view">
            <field name="name">account.payment.term.line.form.makeover</field>
            <field name="model">account.payment.term.line</field>
            <field name="inherit_id" ref="account.view_payment_term_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='days2']" position="after">           
                       <field name="payment_type" />
                </xpath>
            </field>
        </record>
   
   
	  
     </data>
</openerp>
