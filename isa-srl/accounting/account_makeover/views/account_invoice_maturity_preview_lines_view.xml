<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="account_invoice_maturity_preview_lines_form" model="ir.ui.view">
            <field name="name">account.invoice.maturity.preview.lines.form</field>
            <field name="model">account.invoice.maturity.preview.lines</field>
            <field name="arch" type="xml">
                <form string="Preview Lines" version="7.0">
                    <group>
                        <group>
                            <field name="date" invisible="1"/>
                            <field name="amount" invisible="1"/>
                            <field name="currency_name" invisible="1"/>
                            <field name="rel_date" colspan="1"/>
                            <field name="rel_amount" colspan="1" sum="Total amount"/>
                            <field name="rel_currency_name"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="account_invoice_maturity_preview_lines_list" model="ir.ui.view">
            <field name="name">account.invoice.maturity.preview.lines.list</field>
            <field name="model">account.invoice.maturity.preview.lines</field>
            <field name="arch" type="xml">
                <tree string="Preview Lines" toolbar="1" >
                    <field name="date" invisible="1"/>
                    <field name="amount" invisible="1"/>
                    <field name="currency_name" invisible="1"/>
                    <field name="rel_date" colspan="1"/>
                    <field name="rel_amount" colspan="1" sum="Total amount"/>
                    <field name="rel_currency_name"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>
