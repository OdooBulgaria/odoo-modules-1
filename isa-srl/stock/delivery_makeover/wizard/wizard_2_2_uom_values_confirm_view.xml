<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="wizard_uom_values_confirm_view" model="ir.ui.view">
          <field name="name">wizard.uom.values.confirm.form</field>
          <field name="model">wizard.uom.values.confirm</field>
          <field name="arch" type="xml">
            <form string="Unit of Measure Selection" version="7.0">
                <group>
                    <group>
                        <field name="delivery_date" readonly="1"/>
                        <field name="uom_selection" required="1"/>
                    </group>
                    
                </group>
                <footer>
                     <button name="confirm" icon="gtk-yes" string="Save" type="object" default_focus="1" class="oe_highlight" />
                    or 
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
               
            </form>
            </field>
        </record>
        
    </data>
</openerp>
