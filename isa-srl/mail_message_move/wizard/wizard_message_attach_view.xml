<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>          
        
        <record id="wizard_message_attach_view" model="ir.ui.view">
            <field name="name">Message Attach</field>
            <field name="model">wizard.message.attach</field>
            <field name="arch" type="xml">
                <form string="Attach message"  version="7.0">
                    <group>
                      <field name="message_id" invisible="1"/>
	  	              <field name="model_id" required="1" on_change="onchange_model_id(model_id)"/>
	  	              <field name="res_id" required="1" string="ID" placeholder="ID dell'oggetto sotto cui vuoi spostare il messaggio"/>
	  	              <field name="search_string" on_change="onchange_search_string(model_id, search_string)"/>
	                  <field name="line_ids" readonly="1">
	                      <tree editable="bottom">
	                          <field name="res_id" />
	                          <field name="object_name" />                                                    
	                      </tree>
	                  </field>
					</group>
              		<footer>
                  		<button string="Attach" name="attach_message" type="object" class="oe_highlight"/>
                  			or
                  		<button string="Cancel" class="oe_link" special="cancel"/>
              		</footer>
                </form>
            </field>
        </record>

    </data>
</openerp>
