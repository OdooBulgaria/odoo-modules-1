<?xml version="1.0"?>
<openerp>
<data>
        <record id="wizard_document_importer" model="ir.ui.view">
            <field name="name">Import attachments</field>
            <field name="model">wizard.document.importer</field>
            <field name="arch" type="xml">
                <form string="Import attachments" version="7.0">
                    <group>
                        <group>
                            <field name="url" required="1"/>
                            <field name="root_id" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Esegui" name="import_attachments" type="object" class="oe_highlight"/>
                        	or
                        <button string="Annulla" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_import_attachments" model="ir.actions.act_window">
            <field name="name">Import attachments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.document.importer</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem 
        	id="menu_import_attachments" 
        	name="Import attachments" 
        	parent="document.menu_document_management_configuration"  
        	sequence="8" 
        	action="action_import_attachments"/>    

</data>
</openerp>

